@page "/Activity/{interests}"
@using SeamlessEscapesBlazor.Components.Data
@page "/Activity"
@using System.Linq;
@using Microsoft.AspNetCore.Components.Forms;

<h3 class="text-center my-4">Things to Do</h3>

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <input class="form-control" type="text" placeholder="Going to" @bind="Location" @oninput="OnLocationChanged" />
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <InputDate class="form-control" @bind-Value="StartDate" placeholder="Start Date" />
        </div>
        <div class="col-md-6">
            <InputDate class="form-control" @bind-Value="EndDate" placeholder="End Date" />
        </div>
    </div>

    <div class="row">
        @foreach (var activity in FilteredActivities)
        {
            <div class="col-md-4 my-2">
                <div class="card h-100">
                    <img src="@activity.ImageUrl" class="card-img-top" alt="@activity.Name">
                    <div class="card-body">
                        <h5 class="card-title">@activity.Name</h5>
                        <p class="card-text">@activity.Description</p>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="@activity.Name" @bind="activity.IsSelected">
                            <label class="form-check-label" for="@activity.Name">
                                Select
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Interests { get; set; }

    private List<ActivityOption> Activities = new List<ActivityOption>
    {
        new ActivityOption { Name = "Hiking", InterestTags = new List<string> { "adventure", "outdoor" }, ImageUrl = "images/hiking.jpg", Description = "Explore scenic trails and enjoy nature." },
        new ActivityOption { Name = "Snorkeling", InterestTags = new List<string> { "water", "adventure" }, ImageUrl = "images/snorkeling.jpg", Description = "Discover underwater life and vibrant coral reefs." },
        new ActivityOption { Name = "City Tour", InterestTags = new List<string> { "culture", "sightseeing" }, ImageUrl = "images/citytour.jpg", Description = "Experience the local culture and landmarks." },
        new ActivityOption { Name = "Museum Visit", InterestTags = new List<string> { "culture", "education" }, ImageUrl = "images/museum.jpg", Description = "Learn about history and art at the museum." },
        new ActivityOption { Name = "Wine Tasting", InterestTags = new List<string> { "food", "drink" }, ImageUrl = "images/winetasting.jpg", Description = "Taste exquisite wines at a local vineyard." },
        new ActivityOption { Name = "Boat Ride", InterestTags = new List<string> { "water", "relax" }, ImageUrl = "images/boatrides.jpg", Description = "Relax on a scenic boat ride." },
    };

    private List<ActivityOption> FilteredActivities;
    private string Location { get; set; } = string.Empty;
    private DateTime StartDate { get; set; } = DateTime.Today;
    private DateTime EndDate { get; set; } = DateTime.Today.AddDays(1);

    protected override void OnParametersSet()
    {
        FilterActivities();
    }

    private void OnLocationChanged(ChangeEventArgs e)
    {
        Location = e.Value?.ToString();
        FilterActivities();
    }

    private void FilterActivities()
    {
        var interestsList = Interests?.Split(',').Select(i => i.Trim().ToLower()).ToList() ?? new List<string>();
        FilteredActivities = Activities.Where(a => a.InterestTags.Any(tag => interestsList.Contains(tag))).ToList();
    }

    public class ActivityOption
    {
        public string Name { get; set; }
        public List<string> InterestTags { get; set; }
        public bool IsSelected { get; set; }
        public string ImageUrl { get; set; }
        public string Description { get; set; }
    }
}
